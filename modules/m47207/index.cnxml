            </m:mrow>
            <m:mo>-</m:mo>
            <m:mi>f</m:mi>
            <m:mi>δ</m:mi>
            <m:mrow>
              <m:mo>(</m:mo>
              <m:mi>b</m:mi>
              <m:mo>)</m:mo>
            </m:mrow>
            <m:mo>=</m:mo>
            <m:mi>f</m:mi>
            <m:mi>δ</m:mi>
