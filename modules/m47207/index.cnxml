                    <m:mi>g</m:mi>
                    <m:mi>i</m:mi>
                  </m:msub>
                  <m:mo>=</m:mo>
                  <m:msub>
                    <m:mi>f</m:mi>
                    <m:mi>i</m:mi>
                  </m:msub>
                  <m:mo>+</m:mo>
                  <m:mrow>
                    <m:mo>(</m:mo>
                    <m:msub>
                      <m:mi>a</m:mi>
                      <m:mi>i</m:mi>
                    </m:msub>
                    <m:mo>-</m:mo>
                    <m:mi>b</m:mi>
                    <m:mo>)</m:mo>
                  </m:mrow>
                  <m:msub>
                    <m:mi>Ω</m:mi>
                    <m:mi>i</m:mi>
                  </m:msub>
                  <m:mo>,</m:mo>
